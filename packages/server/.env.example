# =============================================================================
# OpenFacilitator Server Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# -----------------------------------------------------------------------------
# Core Settings (Required)
# -----------------------------------------------------------------------------

# Server port and host
PORT=5002
HOST=0.0.0.0

# Database path (SQLite)
DATABASE_PATH=./data/openfacilitator.db

# Authentication secret - generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-here

# Base URL for the auth server
BETTER_AUTH_URL=http://localhost:5002

# Dashboard URL (for CORS)
DASHBOARD_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Blockchain RPC URLs
# -----------------------------------------------------------------------------

# Solana RPC endpoints (recommended: use Helius, Quicknode, or similar)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_DEVNET_RPC_URL=https://api.devnet.solana.com

# -----------------------------------------------------------------------------
# Stats API Configuration (Optional - for /stats endpoints)
# -----------------------------------------------------------------------------

# Treasury addresses - where stats payments are received
STATS_SOLANA_TREASURY=your-solana-treasury-address
STATS_BASE_TREASURY=your-base-treasury-address

# Fee payer addresses - wallets that pay transaction fees
STATS_SOLANA_FEE_PAYER=your-solana-fee-payer-address
STATS_BASE_FEE_PAYER=your-base-fee-payer-address

# Facilitator URL for payment verification
STATS_FACILITATOR_URL=https://pay.openfacilitator.io

# API URL for resource endpoints
API_URL=https://api.openfacilitator.io

# -----------------------------------------------------------------------------
# Railway Integration (Optional - for custom domain management)
# -----------------------------------------------------------------------------

# Get these from Railway dashboard
RAILWAY_TOKEN=
RAILWAY_PROJECT_ID=
RAILWAY_SERVICE_ID=
RAILWAY_ENVIRONMENT_ID=

# -----------------------------------------------------------------------------
# Free Facilitator (Optional - demo/public facilitator)
# -----------------------------------------------------------------------------

# EVM wallet for free facilitator
FREE_FACILITATOR_EVM_KEY=
FREE_FACILITATOR_EVM_ADDRESS=

# Solana wallet for free facilitator
FREE_FACILITATOR_SOLANA_KEY=
FREE_FACILITATOR_SOLANA_ADDRESS=

# -----------------------------------------------------------------------------
# x402 Discovery Integration (Optional)
# -----------------------------------------------------------------------------

# API key for x402jobs discovery service
X402JOBS_API_KEY=

# Payment URL for subscription purchases
X402_JOBS_PAYMENT_URL=https://api.x402.jobs/@openfacilitator/openfacilitator-payment-collector

# -----------------------------------------------------------------------------
# Trusted Origins (Optional - additional CORS origins)
# -----------------------------------------------------------------------------

# Comma-separated list of additional trusted origins
# ADDITIONAL_TRUSTED_ORIGINS=https://example.com,https://app.example.com
